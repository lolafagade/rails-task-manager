<%= form_for(task) do |f| %>
  <div class="form-group">
    <%= f.label :title, 'Enter title' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details, 'Enter details' %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :completed, 'Completed' %>
    <%= f.check_box :completed, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
